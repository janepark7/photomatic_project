
<link rel="stylesheet" types="text.css" href="/css/stylesheet.css">
<link rel="stylesheet" types="text.css" href="/css/normalize.css">
<link rel="stylesheet" types="text.css" href="/css/skeleton.css">

<form class="Form" method="post" id ="signup-form">
	<% if(typeof error !== undefined) { %>
		<div class= "error"><%= error %></div>
	<%}%>

	<div class="username-form">
		Username
	</div>
		<input class="signup-username" type="text" name="username" placeholder="Please Enter A Username"></input><br>

		<div class="password-form">
			Password
		</div>
		<input class="signup-password" type="password" name="password" placeholder="Please Enter A Password"></input><br>

		<div class="password-conf-form">
			Password Confirmation
		</div>
		<input class="signup-conf-password" type="password" name="confirmpassword" placeholder="Please Re-Enter the Password"></input><br>

	<button class ="submit">Submit</button>
</form>


<script src = "/assets/signup.js"></script>
